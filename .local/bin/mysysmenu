#!/bin/sh

result=$(echo '
shutdown
reboot
hibernate
suspend
lock
logout
' | tofi)

case "$result" in
    "shutdown") poweroff ;;
    "reboot") reboot ;;
    "suspend") systemctl suspend ;;
    "hibernate") systemctl hibernate ;;
    "lock") loginctl lock-session ;;
	"logout") hyprctl dispatch exit ;;
esac

