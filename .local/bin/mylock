#!/bin/sh
set -euo pipefail

pgrep hyprlock && exit

if command -v fprintd-verify; then

	(
	until fprintd-verify; do
		 echo "Failed to verify fingerprint at $(date)" | systemd-cat
	done
	echo "Unlocked at $(date)" | systemd-cat
	pkill -USR1 hyprlock
	) &
	hyprlock
	kill $(jobs -p)
	pkill fprintd

else
	hyprlock	
fi
